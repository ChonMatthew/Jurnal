<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.jurnalapp.fragments.list.ListFragment"
        android:label="JURNAL"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_listFragment_to_updateFragment"
            app:destination="@id/updateFragment" />
        <action
            android:id="@+id/action_listFragment_to_entryDetailFragment"
            app:destination="@id/entryDetailFragment" />
        <action
            android:id="@+id/action_listFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.jurnalapp.fragments.add.AddFragment"
        android:label="Add Entry"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_addFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateFragment"
        android:name="com.example.jurnalapp.fragments.update.UpdateFragment"
        android:label="Update Entry" >
        <argument
            android:name="currentEntry"
            app:argType="com.example.jurnalapp.model.Entry" />
        <action
            android:id="@+id/action_updateFragment_to_entryDetailFragment"
            app:destination="@id/entryDetailFragment"
            app:launchSingleTop="true"/>
        <action
            android:id="@+id/action_updateFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/entryDetailFragment"
        android:name="com.example.jurnalapp.fragments.entry.EntryDetailFragment"
        android:label="Jurnal Entry"
        tools:layout="@layout/fragment_entry_detail" >
        <action
            android:id="@+id/action_entryDetailFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <argument
            android:name="currentEntry"
            app:argType="com.example.jurnalapp.model.Entry" />
        <argument
            android:name="isEntryUpdated"
            app:argType="boolean"
            android:defaultValue="false" />
        <action
            android:id="@+id/action_entryDetailFragment_to_updateFragment"
            app:destination="@id/updateFragment"
            app:launchSingleTop="true"/>
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.jurnalapp.fragments.search.SearchFragment"
        android:label="Jurnal Search" >
        <action
            android:id="@+id/action_searchFragment_to_entryDetailFragment"
            app:destination="@id/entryDetailFragment" />
    </fragment>

    <activity
        android:id="@+id/settingsActivity"
        android:name="com.example.jurnalapp.SettingsActivity"
        android:label="Settings" />
</navigation>